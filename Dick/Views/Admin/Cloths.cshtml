@model IEnumerable<Dick.Models.Entities.Cloth>

@{
    ViewBag.Title = "Cloths";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Раздел ткани</h2>

<p>
    @Html.ActionLink("Создание новго поля ткани", "CreateCloth",null, new {@class = "btn btn-primary"})
</p>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="@Url.Action("GetClothImage", "Image", new { item.Id, @class = "img-rounded" })" />
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p>Ширина: @Html.DisplayFor(modelItem => item.Width) м.</p>
                    <p>Дина: @Html.DisplayFor(modelItem => item.Length) м.</p>
                    <p>Код ткани: @Html.DisplayFor(modelItem => item.Code)</p>
                    <p>Цена: @Html.DisplayFor(modelItem => item.Price) Br.</p>
                    <p>
                        @Html.ActionLink("Изменить", "Update", new { id = item.Id}, new {@class = "btn btn-primary"})
                        @Html.ActionLink("Удалить", "DeleteCloth", new { id = item.Id }, new { @class = "btn btn-default" })
                    </p>
                </div>
            </div>
        </div>


    }
</div>
